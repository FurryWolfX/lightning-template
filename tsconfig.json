{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es6",
    ]
  },
  "include": [
    "packages",
    "src",
    ".lightning",
    "types",
  ],
  "exclude": ["node_modules/**"]
}
