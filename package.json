{
  "name": "lightning-template",
  "description": "fast web framework",
  "author": "wolfx",
  "version": "2.0.0",
  "engines": {
    "node": ">= 8.11.0"
  },
  "scripts": {
    "build": "tsc --watch",
    "dev": "nodemon build/app.js",
    "start": "pm2 start build/app.js --name lightning-template -i 2",
    "restart": "pm2 restart lightning-template",
    "stop": "pm2 stop lightning-template",
    "delete": "pm2 delete lightning-template",
    "doc": "apidoc -i src/router -o public/apidoc"
  },
  "dependencies": {
    "@wolfx/lightning": "^2.1.3",
    "@wolfx/x-sql": "1.0.1-alpha4",
    "log4js": "^4.0.2",
    "mysql": "^2.16.0",
    "pm2": "^3.5.1",
    "source-map-support": "^0.5.13"
  },
  "devDependencies": {
    "@types/mysql": "^2.15.6",
    "apidoc": "^0.17.7",
    "nodemon": "^1.19.1",
    "prettier": "^1.16.4",
    "typescript": "^3.5.3"
  },
  "optionalDependencies": {
    "wechat-oauth": "^1.5.0",
    "wechat-pay": "^0.3.2"
  }
}
