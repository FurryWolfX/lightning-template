{
  "name": "lightning-template",
  "description": "fast web framework",
  "author": "wolfx",
  "version": "3.2.0",
  "engines": {
    "node": ">= 8.11.0"
  },
  "scripts": {
    "build": "tsc --watch",
    "dev": "nodemon --exec node build/app.js",
    "prod-build": "pm2 start --name lightning-tempate-build npm -- run build",
    "start": "pm2 start --name lightning-tempate npm -- run dev",
    "stop": "pm2 del lightning-tempate && pm2 del lightning-tempate-build",
    "doc": "apidoc -i src/router -o public/apidoc"
  },
  "dependencies": {
    "@wolfx/lightning": "^3.2.1",
    "@wolfx/x-sql": "^1.4.1",
    "lodash": "^4.17.15",
    "log4js": "^4.0.2",
    "mssql": "^5.1.0",
    "mysql": "^2.16.0",
    "nodemon": "^1.19.1",
    "pm2": "^3.5.1",
    "source-map-support": "^0.5.13",
    "apidoc": "git+https://gitee.com/wolfx/apidoc-fork.git",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.136",
    "@types/mssql": "^4.3.0",
    "@types/mysql": "^2.15.6",
    "@types/node": "^12.7.2",
    "prettier": "^1.16.4"
  }
}
